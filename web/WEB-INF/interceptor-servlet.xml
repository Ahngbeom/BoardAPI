<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/api/user/**"/>
            <mvc:exclude-mapping path="/api/user/info"/>
            <mvc:exclude-mapping path="/api/user/list"/>
            <mvc:exclude-mapping path="/api/user/sign-up"/>
            <mvc:exclude-mapping path="/api/user/id-availability"/>
            <mvc:exclude-mapping path="/api/user/nickname-availability"/>
            <bean id="verifyAuthenticationInterceptor"
                  class="com.perfect.community.api.security.interceptor.VerifyAuthenticationInterceptor"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/api/user/update/*"/>
            <mvc:mapping path="/api/user/withdraw/*"/>
            <mvc:mapping path="/api/user/verify-password"/>
            <mvc:mapping path="/api/user/enable/*"/>
            <mvc:mapping path="/api/user/disable/*"/>
            <bean id="userDeniedAccessInterceptor"
                  class="com.perfect.community.api.security.interceptor.UserDeniedAccessInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>