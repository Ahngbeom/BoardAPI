<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.perfect.community.api.mapper.board.BoardMapper">

    <resultMap id="boardEntityMap" type="com.perfect.community.api.entity.board.BoardEntity">
        <id column="bno" property="bno"/>
        <result column="create_user" property="createUser" />
        <result column="title" property="title"/>
        <result column="comment" property="comment"/>
        <result column="create_date" property="createDate"/>
        <result column="update_date" property="updateDate"/>
    </resultMap>

    <select id="getBoardList" resultMap="boardEntityMap">
        select bno, create_user, title, comment, create_date, update_date
        from boards
        order by bno;
    </select>

    <select id="getBoardInfo" resultMap="boardEntityMap" >
        select bno, create_user, title, comment, create_date, update_date
        from boards
        where bno = #{bno};
    </select>

    <insert id="createBoard" useGeneratedKeys="true" keyProperty="bno">
        insert into boards (title, comment, create_user)
        values (#{title}, #{comment}, #{createUser})
    </insert>

    <update id="updateBoard">
        update boards
        set title       = #{title},
            comment     = #{comment},
            update_date = NOW()
        where bno = #{bno};
    </update>

    <delete id="deleteBoard">
        delete
        from boards
        where bno = #{bno};
    </delete>

    <delete id="deleteAll">
        delete
        from boards
        where bno > 0;
    </delete>
</mapper>