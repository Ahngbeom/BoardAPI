<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.perfect.community.api.mapper.post.PostJoinUserMapper">
    <resultMap id="postDTOMap" type="com.perfect.community.api.dto.post.PostDTO">
        <id property="pno" column="pno"/>
        <result property="boardNo" column="board_no"/>
        <result property="type" column="type"/>
        <result property="title" column="title"/>
        <result property="contents" column="contents"/>
        <result property="regDate" column="reg_date"/>
        <result property="updateDate" column="update_date"/>
        <collection property="writtenUser" resultMap="com.perfect.community.api.mapper.user.UsersMapper.userMap" />
    </resultMap>

    <select id="selectPostListJoinUsers" resultMap="postDTOMap">
        select pno, board_no, type, title, contents, reg_date, update_date, user_id, password, username, enabled, users.reg_date, users.update_date
        from posts left join users on posts.writer = users.user_id
        <if test="type != null">
            where type = #{type}
        </if>
        order by update_date desc
        <if test="page > 0">
            limit ${(page - 1) * 10}, 10
        </if>
    </select>
</mapper>